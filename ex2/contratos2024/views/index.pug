extends layout

block content
  .w3-card-4 
    header.w3-container.w3-black 
      h1= titulo
    .w3-container 
      table.w3-table-all 
        tr
          th ID do Contrato
          th Tipo de Procedimento
          th Objecto do Contrato
          th Data de Publicação
          th Data de Celebração do Contrato
          th Preço Contratual
          th Prazo de Execução
          th NIPC da Entidade Comunicante
          th Entidade Comunicante
          th Fundamentação
        each contrato in contratos
          tr
            td
              a(href="/contratos/" + contrato.idcontrato) #{contrato.idcontrato}
            td= contrato.tipoprocedimento
            td= contrato.objectoContrato
            td= contrato.dataPublicacao
            td= contrato.dataCelebracaoContrato
            td= contrato.precoContratual
            td= contrato.prazoExecucao
            td
              a(href="/contratos/" + contrato.NIPC_entidade_comunicante) #{contrato.NIPC_entidade_comunicante}
            td= contrato.entidade_comunicante
            td= contrato.fundamentacao

    footer.w3-container.w3-black 
      a.w3-button.w3-(href="/") Voltar ao Menu Principal
      address Gerado para EngWeb2024